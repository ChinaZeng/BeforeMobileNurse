<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <include layout="@layout/layout_line" />

        <TextView
            android:id="@+id/main_beds_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/op_bg"
            android:drawableTop="@mipmap/ic_not_choed_beds"
            android:gravity="center"
            android:paddingBottom="@dimen/x20"
            android:paddingRight="@dimen/x50"
            android:paddingLeft="@dimen/x50"
            android:paddingTop="@dimen/x20"
            android:text="04床"
            android:textSize="@dimen/font_size_public_small" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/main_beds_mid_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_mid_choed_beds" />

        <TextView
            android:id="@+id/main_beds_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:paddingBottom="@dimen/x10"
            android:text="05床"
            android:textColor="@color/color_beds_choed_text"
            android:textSize="@dimen/font_size_public_big" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <include layout="@layout/layout_line" />

        <TextView
            android:id="@+id/main_beds_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/op_bg"
            android:drawableTop="@mipmap/ic_not_choed_beds"
            android:gravity="center"
            android:paddingBottom="@dimen/x20"
            android:paddingRight="@dimen/x50"
            android:paddingLeft="@dimen/x50"
            android:paddingTop="@dimen/x20"
            android:text="04床"
            android:textSize="@dimen/font_size_public_small" />

    </LinearLayout>

</LinearLayout>