<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main_pup_item_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingTop="@dimen/y10"
    android:paddingBottom="@dimen/y10"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/main_pup_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_not_choed_beds" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_pup_item_bedsnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04床"
            android:textColor="@color/font_public_gray"
            android:textSize="@dimen/font_size_public_big" />

        <TextView
            android:id="@+id/main_pup_item_bedsname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x2"
            android:text="张三"
            android:textColor="@color/font_public_gray"
            android:textSize="@dimen/font_size_public_big" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_pup_item_wei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/beds_pup_recy_op_not_choed_bg"
            android:text="危"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_public_big" />


        <TextView
            android:id="@+id/main_pup_item_gao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:background="@drawable/beds_pup_recy_op_not_choed_bg"
            android:text="高"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_public_big" />


        <TextView
            android:id="@+id/main_pup_item_erji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:background="@drawable/beds_pup_recy_op_not_choed_bg"
            android:text="二级"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_public_big" />

    </LinearLayout>


</LinearLayout>