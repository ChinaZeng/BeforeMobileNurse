<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_check_fail_bg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_check_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:gravity="center"
        android:text="医嘱执行核对"
        android:textSize="32px" />

    <include layout="@layout/layout_line" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/y368"
        android:orientation="vertical"
        android:paddingTop="@dimen/y20">

        <TextView
            android:layout_width="@dimen/x440"
            android:layout_height="wrap_content"
            android:text="项目名称"
            android:textColor="@color/font_public_gray"
            android:textSize="28px" />

        <LinearLayout
            android:id="@+id/dialog_check_xiangmu_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:layout_width="@dimen/x440"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/y20"
            android:text="默认时间"
            android:textColor="@color/font_public_gray"
            android:textSize="28px" />


        <TextView
            android:id="@+id/dialog_check_default_time"
            android:layout_width="@dimen/x440"
            android:layout_height="wrap_content"
            android:text="2016-11-24 16:00"
            android:textSize="32px" />


        <TextView
            android:layout_width="@dimen/x440"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/y20"
            android:text="实际时间"
            android:textColor="@color/font_public_gray"
            android:textSize="28px" />


        <TextView
            android:id="@+id/dialog_check_now_time"
            android:layout_width="@dimen/x440"
            android:layout_height="wrap_content"
            android:text="2016-11-24 16:00"
            android:textSize="32px" />

        <TextView
            android:layout_width="@dimen/x440"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/y20"
            android:text="操作员"
            android:textColor="@color/font_public_gray"
            android:textSize="28px" />


        <TextView
            android:id="@+id/dialog_check_operator_name"
            android:layout_width="@dimen/x440"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textSize="32px" />


        <TextView
            android:layout_width="@dimen/x440"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_launcher"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/y10"
            android:paddingTop="@dimen/y10"
            android:text="审核通过，请执行..." />


    </LinearLayout>


    <include layout="@layout/layout_line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_check_dismiss"
            android:layout_width="0dp"
            android:layout_height="@dimen/y96"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/text_size_18" />

        <View
            android:layout_width="1px"
            android:layout_height="@dimen/y96"
            android:background="@color/color_main_fragment_bg" />

        <TextView
            android:id="@+id/dialog_check_sure"
            android:layout_width="0dp"
            android:layout_height="@dimen/y96"
            android:layout_weight="1"
            android:gravity="center"
            android:text="执行(5s)"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_18" />


    </LinearLayout>


</LinearLayout>